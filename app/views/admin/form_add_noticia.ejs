<!DOCTYPE html>
<html lang="pt-br">
	<meta charset="utf-8"/>
	<body>
		<h1>Cadastrar Notícia</h1>

		<% if (erro) { %>
			<ul>
				<% erro.forEach((erro)=>{ %>
				   <li><%= erro.msg %></li>
				<% }) %>
			</ul>
		<% } %>

		<form action="/noticia/salvar" method="post">
			<label for="titulo">Título</label>
			<input type="text" name="titulo" id="titulo">
			<br>
			<label for="resumo">Resumo</label>
			<input type="text" name="resumo" id="resumo">
			<br>
			<label for="Autor">Autor</label>
			<input type="text" name="autor" id="autor">
			<br>
			<label for="data_noticia">Data dos fatos</label>
			<input type="date" name="data_noticia" id="data_noticia">
			<br>
			<label for="noticia">Notícia</label>
			<textarea name="noticia" id="noticia" cols="30" rows="10"></textarea>
			<br>
			<input type="submit" value="Enviar">
		</form>


	</body>
</html>